{
  "name": "sane",
  "description": "Sane aims to be fast, small, and reliable file system watcher.",
  "license": "MIT",
  "author": "amasad",
  "homepage": "https://github.com/amasad/sane",
  "repository": {
    "type": "git",
    "url": "https://github.com/amasad/sane"
  },
  "bugs": {
    "url": "https://github.com/amasad/sane/issues"
  },
  "version": "4.1.0",
  "main": "index.js",
  "bin": "./src/cli.js",
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier --trailing-comma es5 --single-quote --write index.js 'src/**/*.js' 'test/**/*.js'",
    "test": "npm run format && eslint src/ test/ index.js && mocha --bail test/test.js && mocha --bail test/utils-test.js && mocha --bail 'test/watchexec_*-test.js'",
    "test:debug": "mocha debug --bail"
  },
  "dependencies": {
    "@cnakazawa/watch": "^1.0.3",
    "anymatch": "^2.0.0",
    "capture-exit": "^2.0.0",
    "exec-sh": "^0.3.2",
    "execa": "^1.0.0",
    "fb-watchman": "^2.0.0",
    "micromatch": "^3.1.4",
    "minimist": "^1.1.1",
    "walker": "~1.0.5"
  },
  "devDependencies": {
    "eslint": "^5.15.1",
    "mocha": "^6.0.2",
    "prettier": "^1.16.4",
    "rimraf": "~2.6.3",
    "tmp": "0.0.33"
  },
  "keywords": [
    "file",
    "fs",
    "fswatcher",
    "watch",
    "watchfile",
    "watching"
  ],
  "engines": {
    "node": "6.* || 8.* || >= 10.*"
  }
}
