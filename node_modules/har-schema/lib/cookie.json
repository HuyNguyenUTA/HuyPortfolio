{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "$id": "cookie.json#",
  "properties": {
    "name": {
      "type": "string"
    },
    "value": {
      "type": "string"
    },
    "path": {
      "type": "string"
    },
    "domain": {
      "type": "string"
    },
    "expires": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "httpOnly": {
      "type": "boolean"
    },
    "secure": {
      "type": "boolean"
    },
    "comment": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "value"
  ]
}
